---
interface Props {
  twitter: string;
  name: string;
}

const { twitter, name } = Astro.props;
---

<a 
  href={`https://x.com/${twitter}`}
  target="_blank"
  rel="noopener noreferrer"
  class="social-link"
>
  @{name}
</a>

<style>
  .social-link {
    color: var(--color-accent);
    text-decoration: none;
    font-size: 0.9rem;
  }

  .social-link:hover {
    text-decoration: underline;
  }
</style>